{
  "name": "@packages/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "studio": "lsof -ti:5555 | xargs kill -9 || true && sleep 1 && prisma studio --port 5555",
    "studio:stop": "lsof -ti:5555 | xargs kill -9 || true",
    "typecheck": "tsc --noEmit --pretty",
    "typecheck:watch": "tsc --noEmit --watch --pretty"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "better-auth": "^1.3.28"
  },
  "devDependencies": {
    "prisma": "^6.17.1",
    "typescript": "^5.8.3",
    "tsx": "^4.7.1",
    "@types/node": "^20.11.17"
  }
}
